build-type:         Simple
extra-doc-files:    CHANGELOG.md
-- extra-source-files:

common common
    ghc-options: -Wall
    default-language: GHC2021
    default-extensions:
        DataKinds
    build-depends:    
        base >=4.17.2.1,
        transformers

library
    import: common
    exposed-modules:  
        Reactimate,
        Reactimate.Signal,
        Reactimate.Run,
        Reactimate.Time,
        Reactimate.Sampling,
        Reactimate.Stateful,
        Reactimate.Switching,
        Reactimate.Setup,
        Reactimate.Basic,
        Reactimate.Event,
        Reactimate.Random,
        Reactimate.Handles
    hs-source-dirs:   src
    ghc-options: -O2
    build-depends: 
        containers,
        vector,
        async >= 2.2,
        random

executable bench
    import: common
    build-depends:
        reactimate,
        Yampa,
        dunai,
        tasty,
        tasty-bench
    hs-source-dirs:   bench
    main-is: Main.hs
    ghc-options: -O2
